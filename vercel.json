{
  "crons": [
    {
      "path": "/api/cron/payroll-reminders",
      "schedule": "0 8 * * 1"
    },
    {
      "path": "/api/cron/invoice-reminders",
      "schedule": "0 9 * * *"
    }
  ],
  "functions": {
    "app/api/stripe/webhook/route.ts": {
      "maxDuration": 30
    },
    "app/api/ai/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/payroll/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
