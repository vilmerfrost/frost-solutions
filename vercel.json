{
  "crons": [
    {
      "path": "/api/rot/poll-status",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/payroll-reminders",
      "schedule": "0 8 * * 1"
    },
    {
      "path": "/api/cron/invoice-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/friday-panic",
      "schedule": "0 14 * * 5"
    },
    {
      "path": "/api/cron/budget-alerts",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/share-link-cleanup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/sync-integrations",
      "schedule": "*/5 * * * *"
    }
  ],
  "functions": {
    "app/api/stripe/webhook/route.ts": {
      "maxDuration": 30
    },
    "app/api/ai/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/payroll/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/cron/sync-integrations/route.ts": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
