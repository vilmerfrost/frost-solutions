# ============================================
# FROST SOLUTIONS - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to git!

# ============================================
# SUPABASE (Required)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Alternative: Used by some server-side code
SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# STRIPE (Required for AI payments)
# ============================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# AI PROVIDERS (Required for AI features)
# ============================================
GEMINI_API_KEY=your_gemini_api_key
GROQ_API_KEY=your_groq_api_key

# Optional AI providers
OPENAI_API_KEY=your_openai_api_key
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# ============================================
# INTEGRATIONS (Required for Fortnox/Visma)
# ============================================
# Fortnox OAuth
# Note: Redirect URIs must include /app basePath!
FORTNOX_CLIENT_ID=your_fortnox_client_id
FORTNOX_CLIENT_SECRET=your_fortnox_client_secret
FORTNOX_REDIRECT_URI=http://localhost:3000/app/api/integrations/fortnox/callback
FORTNOX_BASE_URL=https://api.fortnox.se/3

# Visma OAuth
VISMA_CLIENT_ID=your_visma_client_id
VISMA_CLIENT_SECRET=your_visma_client_secret
VISMA_REDIRECT_URI=http://localhost:3000/app/api/integrations/visma/callback
VISMA_EACCOUNTING_BASE_URL=https://eaccountingapi.vismaonline.com/v2
VISMA_PAYROLL_BASE_URL=https://payroll.visma.net/api/v1

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Application URLs - Must include /app basePath!
# The app runs under basePath '/app' (e.g., frostsolutions.se/app)
# For development: http://localhost:3000/app
# For production: https://frostsolutions.se/app
NEXT_PUBLIC_SITE_URL=http://localhost:3000/app
NEXT_PUBLIC_APP_URL=http://localhost:3000/app
# Marketing site URL (without basePath)
NEXT_PUBLIC_MARKETING_URL=http://localhost:3000

# ============================================
# ENCRYPTION (Required for secure token storage)
# ============================================
# Generate with: openssl rand -hex 32
# Or: node -e "console.log(require(''crypto'').randomBytes(32).toString(''hex''))"
ENCRYPTION_KEY=your_32_byte_hex_key_here

# Alternative base64 format (if using base64)
ENCRYPTION_KEY_256_BASE64=your_32_byte_base64_key_here

# ============================================
# EMAIL (Optional - for sending emails)
# ============================================
RESEND_API_KEY=your_resend_api_key
SENDGRID_API_KEY=your_sendgrid_api_key
# Sender email address (must be verified with your email provider)
MAIL_FROM=noreply@yourdomain.com

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Disable AI payment system (for testing)
AI_PAYMENT_DISABLED=false

# ============================================
# WEBHOOK CONFIGURATION (Optional)
# ============================================
WEBHOOK_TOLERANCE_SECONDS=300

# ============================================
# CRON JOBS (Optional - for background tasks)
# ============================================
CRON_SECRET=your_cron_secret_key

# ============================================
# PERSONNUMMER ENCRYPTION (Required for ROT)
# ============================================
# 32-character key for personnummer encryption (GDPR compliance)
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
PNR_ENCRYPTION_KEY=your_32_character_encryption_key

# ============================================
# OCR CONFIGURATION (Optional)
# ============================================
# Set to 'false' to enable real OCR (default: 'true' uses mock data)
OCR_USE_MOCK=true

# AWS Textract (if OCR_USE_MOCK=false)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-north-1

# Google Document AI (alternative to AWS Textract)
GOOGLE_DOC_AI_PROCESSOR_NAME=your_processor_name
GOOGLE_PROJECT_ID=your_google_project_id
GOOGLE_LOCATION=eu

# ============================================
# SKATTEVERKET (Required for ROT submissions)
# ============================================
# Set to 'true' for testing, 'false' for production
SKATTEVERKET_TEST_MODE=true
SKATTEVERKET_API_KEY=your_skatteverket_api_key

# ============================================
# FACTORING / RESURS (Optional)
# ============================================
RESURS_API_SECRET=your_resurs_api_secret
